<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.112.5">
    <title>@ViewData["Title"] - BlogApp_Net8</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/blog/">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/blog.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/blog_index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/features.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogApp_Net8.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Playfair&#43;Display:700,900&amp;display=swap" rel="stylesheet">
</head>
<body>

    <div class="container">
        <header class="border-bottom lh-1 py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="link-secondary" href="#">ユーザー登録</a>
                    }
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-body-emphasis text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">BlogApp_Net8</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="link-secondary" href="#" aria-label="Search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5" /><path d="M21 21l-5.2-5.2" /></svg>
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>ログイン中です。</div>
                        <a class="link-secondary mx-1" asp-area="" asp-controller="Home" asp-action="Mypage">マイページ</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Login" asp-action="logout">ログアウト</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Login" asp-action="login">ログイン</a>
                    }

                </div>
            </div>
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-5 text-center text-body-secondary bg-body-tertiary">
    <p>&copy; 2024 - BlogApp_Net8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        <p class="mb-0">
            <a href="#">Back to top</a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
